        </activity>
        <activity
            android:name=".Controller.UI2"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Controller.UI3"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Controller.UI4"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Controller.UI5"
            android:label="@string/app_name" >
