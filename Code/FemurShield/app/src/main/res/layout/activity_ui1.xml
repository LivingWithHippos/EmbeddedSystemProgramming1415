<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="org.tbw.FemurShield.UI1">

    <ImageView
        android:layout_width="@dimen/button_image"
        android:layout_height="@dimen/button_image"
        android:id="@+id/recbtnun1"
        android:background="@mipmap/rec"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:visibility="visible"
        android:onClick="onRecClick" />

    <ImageView
        android:layout_width="@dimen/button_image"
        android:layout_height="@dimen/button_image"
        android:id="@+id/pausebtnui1"
        android:background="@mipmap/pause"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:visibility="invisible"
        android:onClick="onPauseClick" />

    <ImageView
        android:layout_width="@dimen/button_image"
        android:layout_height="@dimen/button_image"
        android:id="@+id/startbtnui1"
        android:background="@mipmap/play"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:visibility="invisible"
        android:onClick="onPlayClick" />

    <ImageView
        android:layout_width="@dimen/button_image"
        android:layout_height="@dimen/button_image"
        android:id="@+id/stopbntui1"
        android:background="@mipmap/stop"
        android:clickable="true"
        android:visibility="invisible"
        android:layout_alignTop="@+id/recbtnun1"
        android:layout_alignParentStart="true"
        android:onClick="onStopClick" />
</RelativeLayout>
