<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <objectAnimator
            android:propertyName="translationZ"
            android:duration="@android:integer/config_shortAnimTime"
            android:valueFrom="@dimen/email_button_height_normal"
            android:valueTo="@dimen/email_button_height_pressed"
            android:valueType="floatType"/>
    </item>
    <item>
        <objectAnimator
            android:propertyName="translationZ"
            android:duration="@android:integer/config_shortAnimTime"
            android:valueFrom="@dimen/email_button_height_pressed"
            android:valueTo="@dimen/email_button_height_normal"
            android:valueType="floatType"/>
    </item>
</selector>