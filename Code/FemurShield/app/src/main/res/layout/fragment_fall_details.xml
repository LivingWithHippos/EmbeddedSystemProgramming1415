
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/fall_container_fragment" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="org.tbw.FemurShield.Controller.FallFragment">

    <FrameLayout  android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ivFallSignature" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/ivSentSign"
            android:layout_gravity="bottom|right"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"/>

    </FrameLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/llChangeOnOrientation"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/fall_date_time"
            android:id="@+id/tvFallDetailsDateTime"
            android:layout_gravity="center_horizontal" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/fall_longitude"
            android:id="@+id/tvFallLongitude"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/fall_latitude"
            android:id="@+id/tvFallLatitude"
            android:layout_gravity="center_horizontal" />


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:id="@+id/ivSessionSignatureInFallDetails"
            android:paddingTop="20dp"/>

    </LinearLayout>


</LinearLayout>


</LinearLayout>
