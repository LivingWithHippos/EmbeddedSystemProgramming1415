<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/signature_list"
        android:layout_height="@dimen/signature_list"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:id="@+id/sessionsignatureui1" />

    <ImageView
        android:layout_width="@dimen/width_state_image_list"
        android:layout_height="@dimen/height_state_image_list"
        android:paddingTop="5dp"
        android:id="@+id/sessionstateimgui1"
        android:layout_toEndOf="@+id/sessionsignatureui1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:lines="1"
            android:scrollHorizontally="true"
            android:textStyle="bold"
            android:textSize="@dimen/nome_sessione_lista"
            android:textColor="#ff000000"
            android:layout_toRightOf="@+id/sessionstateimgui1"
            android:id="@+id/sessionnameui1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/testo_lista"
                android:textColor="#ff000000"
                android:layout_weight="1"
                android:layout_below="@+id/sessionnameui1"
                android:layout_toRightOf="@+id/sessionstateimgui1"
                android:id="@+id/sessionstartingdateui1"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sessionstartingtimeui1"
                android:textSize="@dimen/testo_lista"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/sessionstartingdateui1"
                android:layout_below="@+id/sessionnameui1"
                android:textColor="#ff000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sessionfallsui1"
            android:textSize="@dimen/testo_lista"
            android:layout_below="@+id/sessionstartingdateui1"
            android:layout_toRightOf="@+id/sessionstateimgui1"
            android:textColor="#ff000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sessiondurationui1"
            android:textSize="@dimen/testo_lista"
            android:layout_below="@+id/sessionfallsui1"
            android:layout_toRightOf="@+id/sessionstateimgui1"
            android:textColor="#ff000000" />


</RelativeLayout>
