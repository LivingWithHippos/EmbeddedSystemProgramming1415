<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:padding="5dp" >

    <!-- riunisce il tutto-->
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"  >

        <!-- icona dell'opzione-->
        <ImageView android:id="@+id/ivSettingItemIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="false" />

        <!-- the container per titolo e descrizione -->
        <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ivSettingItemIcon"
            android:layout_centerVertical="true" >

            <!-- titolo -->
            <TextView android:id="@+id/tvSettingItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <!-- Descrizione -->
            <TextView android:id="@+id/tvSettingItemDescription"
                android:layout_below="@id/tvSettingItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/settingSecondary"
                android:textAppearance="@android:style/TextAppearance.Small" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>