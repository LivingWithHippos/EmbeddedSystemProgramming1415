<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="org.tbw.FemurShield.Controller.UI3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView android:text="NomeSessiones" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/session_name"
            android:textSize="@dimen/nome_sessione_lista" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DataEOra"
            android:id="@+id/session_date"
            android:textSize="@dimen/testo_lista" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DurataSessioneRT"
            android:id="@+id/session_time"
            android:textSize="@dimen/testo_lista" />

        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chronometerui3" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cadute:"
                android:id="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NumeroCaduteRT"
                android:id="@+id/num_fall"
                android:textSize="@dimen/testo_lista"
                android:layout_marginRight="0dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="@dimen/button_image_small"
                android:layout_height="@dimen/button_image_small"
                android:id="@+id/stopbntui3"
                android:background="@mipmap/stop"
                android:clickable="true"
                android:visibility="invisible"
                android:layout_alignTop="@+id/recbtnun1"
                android:layout_alignParentStart="true"
                android:onClick="onStopClick"
                android:layout_marginLeft="@dimen/small_button_padding"
                android:layout_marginRight="@dimen/small_button_padding" />

            <ImageView
                android:layout_width="@dimen/button_image_small"
                android:layout_height="@dimen/button_image_small"
                android:id="@+id/pausebtnui3"
                android:background="@mipmap/pause"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:visibility="invisible"
                android:onClick="onPauseClick"
                android:layout_marginLeft="@dimen/small_button_padding"
                android:layout_marginRight="@dimen/small_button_padding" />

            <ImageView
                android:layout_width="@dimen/button_image_small"
                android:layout_height="@dimen/button_image_small"
                android:id="@+id/startbtnui3"
                android:background="@mipmap/play"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:visibility="invisible"
                android:onClick="onPlayClick"
                android:layout_marginLeft="@dimen/small_button_padding"
                android:layout_marginRight="@dimen/small_button_padding" />

        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/altezza_grafico"
            android:id="@+id/graficoacc"
            android:layout_below="@+id/session_name"
            android:layout_alignParentStart="true"
            android:background="#fff1f1f1" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/listfallui3" />
    </LinearLayout>

</RelativeLayout>
